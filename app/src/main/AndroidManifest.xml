<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.baidu.activityhelper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="baidu.activityhelper.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="baidu.activityhelper.helper.HelperActivity" />
        <activity
            android:name="baidu.activityhelper.SingleTaskActivity"
            android:launchMode="singleTask" />
        <activity
            android:name="baidu.activityhelper.SingleInstanceActivity"
            android:launchMode="singleInstance" />

    </application>

</manifest>